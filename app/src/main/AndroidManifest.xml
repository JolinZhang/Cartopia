<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jonelezhang.cartopia" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Buy"
            android:label="@string/title_activity_buy"
            android:theme="@style/BuyTheme" >
        </activity>
        <activity
            android:name=".Sell"
            android:label="@string/title_activity_sell"
            android:theme="@style/BuyTheme" >
        </activity>
        <activity
            android:name=".Info"
            android:label="@string/title_activity_info"
            android:theme="@style/BuyTheme" >
        </activity>
        <activity
            android:name=".MyCars"
            android:label="@string/title_activity_my_cars"
            android:theme="@style/BuyTheme" >
        </activity>
        <activity
            android:name=".MyFavs"
            android:label="@string/title_activity_my_favs"
            android:theme="@style/BuyTheme" >
        </activity>
        <activity
            android:name=".CarDetails"
            android:label="@string/title_activity_car_details"
            android:theme="@style/BuyTheme">
        </activity>
    </application>

</manifest>
