<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#303aa5"
    android:clickable="false"
    android:id="@+id/main_activity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/banner_crv2dd"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:gravity="center_vertical"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logon_logo"
        android:translationZ="1dp"
        android:text="CARTOPIA"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:gravity="center" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:elevation="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:translationZ="1dp"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="-15dp"
        android:id="@+id/logon_box">

        <!--Username label-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/logon_username"
                android:hint="Username"
                android:inputType="textPersonName"
                android:maxLength="20"/>
        </android.support.design.widget.TextInputLayout>
        <!--Passport Label-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/logon_passport"
                android:hint="Passport"
                android:inputType="textPassword"
                android:minLines="6" />
        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember Me"
            android:id="@+id/logon_remember"
            android:layout_marginTop="8dp"/>

        <!--log on button-->
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/logon_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="18dp"
            android:text="Log On"
            android:textColor="#ffffff"
            android:background="#3f51b5"
            android:elevation="10dp" />
    </LinearLayout>
    <include layout="@layout/signup" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_signup"
        android:text="No account yet? Create one"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:background="#ee0000"
        />

</RelativeLayout>